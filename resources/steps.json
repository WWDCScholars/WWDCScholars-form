[
  {
    "slug": "0-basic",
    "title": "Let's get you signed up...",
    "color": "orange",
    "ckParameterName": "scholar",
    "sections": [{
        "title": "Please upload a profile picture",
        "fields": [{
          "name": "profilePicture",
          "readableName": "profile picture",
          "type": "image",
          "accept": "image/*",
          "dimensions_min": 250,
          "resizeMax": 500,
          "comment": "This needs to be an image of you or a Memoji with a resolution of at least 250x250"
        }]
      }, {
        "title": "Enter some basic details about yourself",
        "fields": [{
          "name": "givenName",
          "type": "text",
          "placeholder": "Given Name",
          "styleClass": "field-width-50"
        }, {
          "name": "familyName",
          "type": "text",
          "placeholder": "Family Name",
          "styleClass": "field-width-50"
        }, {
          "name": "birthday",
          "readableName": "Date of Birth",
          "type": "date",
          "placeholder": "Date of Birth",
          "onlyPast": true,
          "displayFormat": "Y-m-d"
        }]
      }, {
        "title": "Pronouns",
        "fields": [{
          "name": "gender",
          "type": "radio",
          "options": [{
            "label": "he / him",
            "value": "male"
          }, {
            "label": "she / her",
            "value": "female"
          }, {
            "label": "they / them",
            "value": "other"
          }]
        }]
      }, {
        "ckParameterName": "scholarPrivate",
        "fields": [{
          "name": "email",
          "type": "email",
          "placeholder": "Email",
          "comment": "We use your email address to make sure you won’t lose access to your account and to verify it’s you. It is not shared with anyone and will not be publicly visible."
        }]
      }]
  },

  {
    "slug": "1-about",
    "title": "A little more information to help you connect...",
    "color": "red",
    "ckParameterName": "scholar",
    "sections": [{
      "title": "Describe yourself in less than 300 characters",
      "fields": [{
        "name": "biography",
        "readableName": "Bio",
        "type": "textarea",
        "maxLength": 300
      }]
    }, {
      "title": "Tell us where you're from",
      "fields": [{
        "name": "location",
        "type": "location",
        "placeholder": "Hometown / Nearest City"
      }]
    }, {
      "title": "Where else can people find you?",
      "ckParameterName": "socialMedia",
      "fields": [{
        "name": "discord",
        "type": "text",
        "placeholder": "Discord Username",
        "required": false
      }, {
        "name": "website",
        "type": "url",
        "placeholder": "Personal Website URL",
        "required": false
      }, {
        "name": "github",
        "type": "url",
        "placeholder": "GitHub URL",
        "required": false
      }, {
        "name": "itunes",
        "type": "url",
        "placeholder": "App Store Developer Page URL",
        "required": false
      }, {
        "name": "twitter",
        "type": "url",
        "placeholder": "Twitter URL",
        "required": false
      }, {
        "name": "instagram",
        "type": "url",
        "placeholder": "Instagram URL",
        "required": false
      }, {
        "name": "facebook",
        "type": "url",
        "placeholder": "Facebook URL",
        "required": false
      }, {
        "name": "linkedin",
        "type": "url",
        "placeholder": "LinkedIn URL",
        "required": false
      }, {
        "name": "imessage",
        "type": "text",
        "placeholder": "iMessage Number or Email",
        "required": false
      }]
    }]
  },

  {
    "slug": "2-application",
    "title": "Now for the fun part. Show us your WWDC 2021 submission!",
    "color": "green",
    "ckParameterName": "wwdcYearInfo",
    "sections": [{
      "title": "What applicant group do you fall under?",
      "fields": [{
        "name": "appliedAs",
        "type": "radio",
        "options": [{
          "label": "Student",
          "value": "student"
        }, {
          "label": "STEM",
          "value": "stem"
        }, {
          "label": "Developer Academy Member",
          "value": "academy"
        }],
        "readableName": "applicant group"
      }]
    }, {
      "title": "Describe your winning project in less than 300 characters",
      "fields": [{
        "name": "description",
        "readableName": "project description",
        "type": "textarea",
        "maxLength": 300
      }]
    }, {
      "title": "Upload up to five screenshots that showcase your playground submission",
      "fields": [{
        "name": "screenshots",
        "readableName": "screenshots",
        "type": "image",
        "accept": "image/*",
        "styleClass": "field-image-wide",
        "multiple": true,
        "maxCount": 5,
        "minCount": 1,
        "resizeMax": 1920
      }]
    }, {
      "title": "Is your submission available to view anywhere else? Let us know!",
      "fields": [{
        "name": "videoLink",
        "readableName": "YouTube link",
        "type": "url",
        "placeholder": "YouTube URL",
        "required": false
      }, {
        "name": "githubLink",
        "readableName": "GitHub link",
        "type": "url",
        "placeholder": "GitHub URL",
        "required": false
      }]
    }, {
      "title": "In order to validate your submission, please upload a screenshot of the Events Section of your Apple Developer Profile",
      "fields": [{
        "name": "acceptanceEmail",
        "readableName": "acceptance email",
        "type": "image",
        "accept": "image/*",
        "styleClass": "field-image-wide",
        "resizeMax": 1000,
        "comment": "You can find <a href=\"https://developer.apple.com/account/#/events\" target=\"_blank\")>your Apple Developer Profile here (developer.apple.com/account/#/events)</a>. Make sure the <i>WWDC2021 Swift Student Challenge Winner</i> entry and your name in the top-right corner are clearly visible in the screenshot."
      }]
    }]
  }
]
